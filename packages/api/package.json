{
  "name": "@boilerplate/api",
  "version": "1.0.0",
  "main": "./server.ts",
  "sideEffects": false,
  "scripts": {
    "start": "pnpm with-env ts-node server.ts",
    "dev": "pnpm with-env nodemon --exec ts-node server.ts",
    "data:gen": "pnpm with-env ts-node src/dataGenerator.ts",
    "lint:fix": "eslint --config .eslintrc.commit.js --fix --cache --ext .ts,.tsx src",
    "lint": "eslint --config .eslintrc.js --ext .ts,.tsx src",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "test": "pnpm with-env jest",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@boilerplate/database": "workspace:*",
    "@trpc/server": "^10.16.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "1.11.10",
    "express": "^4.19.2",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "9.0.2",
    "kysely": "0.27.4",
    "superjson": "^2.0.0",
    "trpc-shield": "0.4.4",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@boilerplate/eslint-config": "workspace:*",
    "@trpc/client": "^10.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "^18.15.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.1.0",
    "elysia": "^1.0.27",
    "eslint": "8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  }
}
